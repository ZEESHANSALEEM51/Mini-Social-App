<% layout("/layouts/boilerplate") %>
</head>
<body>
    <div class="container my-5 mt-2">
        <h3 class="mb-4 text-center mt-1">All Users</h3>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% for(let user of users){ %> 
                <div class="col">
                    <a href="/users/<%= user._id %>">
                      <div class="card h-100 shadow-sm">
                        <img src="<%= user.image %>" class="card-img-top" alt="user-image" style=" height: 250px; ">
                        <div class="card-body">
                            <h5 class="card-title home-img"><%= user.name %></h5>
                            <p class="card-text">
                              Followers: <%= user.followers.toLocaleString("en-IN") %> <br> 
                             <span style="color: red;">&hearts;</span>
 Likes: <%= user.likes %>
                        </div>
                    </div>
                    </a>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>