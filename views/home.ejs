<% layout("/layouts/boilerplate") %>

<div class="container py-4 py-lg-5">
  <!-- Page Header -->
  <div class="text-center mb-4 mb-lg-5 px-2">
    <h1 class="display-6 fw-bold mb-3" style="color: #2d3748;">Our Community</h1>
    <p class="text-muted mb-4">Discover amazing people around you</p>
    <div class="d-flex justify-content-center gap-2 flex-wrap">
      <span class="badge bg-primary rounded-pill px-3 py-2 mb-1">
        <i class="fas fa-users me-1"></i> Users: <%= users.length %>
      </span>
      <span class="badge bg-success rounded-pill px-3 py-2 mb-1">
        <i class="fas fa-heart me-1"></i> Likes: <%= users.reduce((sum, user) => sum + user.likes, 0).toLocaleString("en-IN") %>
      </span>
    </div>
  </div>

  <!-- Search Bar (Mobile Optimized) -->
  <div class="row mb-4 mb-lg-5 px-2">
    <div class="col-12">
      <div class="input-group input-group-lg shadow-sm">
        <span class="input-group-text bg-white border-end-0 d-none d-sm-flex">
          <i class="fas fa-search text-muted"></i>
        </span>
        <input type="text" class="form-control border-start-0 px-3" placeholder="Search users..." aria-label="Search">
        <button class="btn btn-primary px-3 px-sm-4" type="button">
          <i class="fas fa-filter d-none d-sm-inline me-2"></i>
          <span class="d-sm-none">Filter</span>
          <span class="d-none d-sm-inline">Filter</span>
        </button>
      </div>
    </div>
  </div>

  <!-- Users Grid with Better Mobile Spacing -->
  <div class="row g-3 g-md-4 px-2 px-md-3">
    <% for(let user of users){ %> 
    <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
      <div class="card h-100 border-0 shadow-sm hover-lift mobile-card">
        <!-- User Image -->
        <div class="position-relative">
          <img src="<%= user.image %>" 
               class="card-img-top rounded-top" 
               alt="<%= user.name %>"
               style="height: 200px; object-fit: cover;">
          
          <!-- Online Status Badge -->
          <div class="position-absolute top-0 end-0 m-2">
            <span class="badge <%= user.isOnline ? 'bg-success' : 'bg-secondary' %> rounded-pill px-2 py-1">
              <i class="fas fa-circle <%= user.isOnline ? 'fa-beat-fade' : '' %> me-1" style="font-size: 0.5rem;"></i>
              <span class="d-none d-sm-inline"><%= user.isOnline ? 'Online' : 'Offline' %></span>
            </span>
          </div>
          
          <!-- Quick Actions (Only on Desktop) -->
          <div class="position-absolute bottom-0 start-0 w-100 p-2 d-none d-md-block" 
               style="background: linear-gradient(transparent, rgba(0,0,0,0.7));">
            <div class="d-flex justify-content-between">
              <button class="btn btn-light btn-sm rounded-pill px-2">
                <i class="fas fa-user-plus me-1"></i> Follow
              </button>
              <button class="btn btn-light btn-sm rounded-pill px-2">
                <i class="fas fa-heart me-1"></i> Like
              </button>
            </div>
          </div>
        </div>

        <!-- Card Body -->
        <div class="card-body p-3">
          <!-- User Name -->
          <div class="d-flex justify-content-between align-items-start mb-2">
            <h5 class="card-title fw-bold mb-0 fs-6">
              <%= user.name %>
              <% if(user.isVerified) { %>
                <i class="fas fa-check-circle text-primary ms-1" style="font-size: 0.8rem;"></i>
              <% } %>
            </h5>
            <span class="badge bg-light text-dark border small">
              #<%= user._id.toString().slice(-4) %>
            </span>
          </div>

          <!-- User Stats (Mobile Optimized) -->
          <div class="row g-2 mb-3">
            <div class="col-6">
              <div class="bg-light rounded-3 p-2 text-center">
                <div class="text-primary fw-bold fs-6">
                  <%= user.followers.toLocaleString("en-IN") %>
                </div>
                <div class="text-muted x-small">Followers</div>
              </div>
            </div>
            <div class="col-6">
              <div class="bg-light rounded-3 p-2 text-center">
                <div class="text-danger fw-bold fs-6">
                  <%= user.likes.toLocaleString("en-IN") %>
                </div>
                <div class="text-muted x-small">Likes</div>
              </div>
            </div>
          </div>

          <!-- User Tags (Only 2 on mobile) -->
          <% if(user.interests && user.interests.length > 0) { %>
          <div class="mb-3">
            <div class="d-flex flex-wrap gap-1">
              <% user.interests.slice(0, window.innerWidth < 576 ? 2 : 3).forEach(interest => { %>
                <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill px-2 py-1 small">
                  <%= interest %>
                </span>
              <% }) %>
              <% if(user.interests.length > (window.innerWidth < 576 ? 2 : 3)) { %>
                <span class="badge bg-secondary bg-opacity-10 text-secondary rounded-pill px-2 py-1 small">
                  +<%= user.interests.length - (window.innerWidth < 576 ? 2 : 3) %>
                </span>
              <% } %>
            </div>
          </div>
          <% } %>

          <!-- View Profile Button -->
          <a href="/users/<%= user._id %>" 
             class="btn btn-outline-primary w-100 d-flex align-items-center justify-content-center gap-1 py-2 small">
            <i class="fas fa-eye"></i> View Profile
          </a>
        </div>

        <!-- Card Footer (Simplified on Mobile) -->
        <div class="card-footer bg-transparent border-top d-flex justify-content-between align-items-center py-2">
          <small class="text-muted small">
            <i class="fas fa-clock me-1"></i>
            <span class="d-none d-sm-inline">Joined </span>
            <%= new Date(user.createdAt).toLocaleDateString('en-IN', {month: 'short', year: 'numeric'}) %>
          </small>
          <div class="d-flex gap-1">
            <button class="btn btn-sm btn-outline-secondary p-1 rounded-circle d-none d-sm-block" 
                    style="width: 28px; height: 28px;">
              <i class="fas fa-share-alt" style="font-size: 0.7rem;"></i>
            </button>
            <button class="btn btn-sm btn-outline-secondary p-1 rounded-circle" 
                    style="width: 28px; height: 28px;">
              <i class="fas fa-bookmark" style="font-size: 0.7rem;"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </div>

  <!-- Empty State -->
  <% if(users.length === 0) { %>
  <div class="text-center py-5 my-4 px-3">
    <div class="mb-4">
      <i class="fas fa-users fa-3x text-muted opacity-25"></i>
    </div>
    <h3 class="text-muted mb-3 h5">No Users Found</h3>
    <p class="text-muted mb-4 small">Be the first to join our community!</p>
    <a href="/users/add" class="btn btn-primary px-4 py-2">
      <i class="fas fa-user-plus me-2"></i> Add First User
    </a>
  </div>
  <% } %>

  <!-- Load More Button -->
  <% if(users.length > 0) { %>
  <div class="text-center mt-4 mt-lg-5 pt-3 px-2">
    <button class="btn btn-outline-primary px-4 px-lg-5 py-2 rounded-pill">
      <i class="fas fa-spinner fa-spin me-2 d-none"></i>
      Load More
    </button>
  </div>
  <% } %>
</div>

<!-- Mobile-specific CSS and JavaScript -->
<style>
/* Mobile-specific adjustments */
@media (max-width: 576px) {
  .container {
    padding-left: 12px;
    padding-right: 12px;
  }
  
  .mobile-card {
    margin: 0 4px;
  }
  
  .card-body {
    padding: 16px !important;
  }
  
  .card-footer {
    padding: 12px 16px !important;
  }
  
  /* Reduce font sizes on mobile */
  .display-6 {
    font-size: 1.75rem;
  }
  
  .fs-6 {
    font-size: 1rem !important;
  }
  
  .small {
    font-size: 0.85rem !important;
  }
  
  .x-small {
    font-size: 0.75rem !important;
  }
  
  /* Adjust card image height on mobile */
  .card-img-top {
    height: 180px !important;
  }
}

@media (max-width: 768px) {
  .row {
    margin-left: -8px;
    margin-right: -8px;
  }
  
  .col-12, .col-sm-6 {
    padding-left: 8px;
    padding-right: 8px;
  }
  
  .card {
    border-radius: 12px !important;
  }
}

/* Ensure cards don't touch screen edges */
.mobile-card {
  border-radius: 12px;
  overflow: hidden;
}

/* Prevent horizontal scrolling */
body {
  overflow-x: hidden;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Initialize tooltips only on larger screens
  if (window.innerWidth > 768) {
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
      return new bootstrap.Tooltip(tooltipTriggerEl);
    });
  }
  
  // Mobile-specific adjustments
  function adjustForMobile() {
    const isMobile = window.innerWidth < 576;
    
    // Adjust tags display based on screen size
    document.querySelectorAll('.badge').forEach(badge => {
      if (badge.textContent.includes('+') && badge.textContent.includes('more')) {
        const parent = badge.closest('.d-flex');
        if (parent && isMobile) {
          // Hide extra tags indicator on very small screens
          if (window.innerWidth < 400) {
            badge.style.display = 'none';
          } else {
            badge.style.display = 'inline-block';
          }
        }
      }
    });
    
    // Adjust card padding on very small screens
    if (window.innerWidth < 400) {
      document.querySelectorAll('.card-body').forEach(body => {
        body.style.padding = '12px !important';
      });
    }
  }
  
  // Run on load and resize
  adjustForMobile();
  window.addEventListener('resize', adjustForMobile);
  
  // Simple search functionality
  const searchInput = document.querySelector('input[placeholder="Search users..."]');
  if (searchInput) {
    searchInput.addEventListener('input', function() {
      const searchTerm = this.value.toLowerCase().trim();
      const cards = document.querySelectorAll('.card');
      
      cards.forEach(card => {
        const userName = card.querySelector('.card-title').textContent.toLowerCase();
        const parent = card.closest('.col-12, .col-sm-6, .col-lg-4, .col-xl-3');
        
        if (searchTerm === '' || userName.includes(searchTerm)) {
          parent.style.display = 'block';
        } else {
          parent.style.display = 'none';
        }
      });
    });
  }
  
  // Add mobile touch effects
  document.querySelectorAll('.card').forEach(card => {
    card.addEventListener('touchstart', function() {
      this.style.transform = 'scale(0.98)';
    });
    
    card.addEventListener('touchend', function() {
      this.style.transform = '';
    });
  });
});
</script>