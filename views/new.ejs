<% layout("/layouts/boilerplate") %>
<body>
    <div class="container my-5">
        <div class="card shadow-sm">
            <div class="card-header text-center bg-primary text-white">
                <h1>Insert New Users</h1>
            </div>
            <div class="card-body">
                <form method="post" action="/users/add" enctype="multipart/form-data" novalidate class="needs-validation">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name :</label>
                        <input type="text" name="name" class="form-control" placeholder="Enter your name" required>
                        <div class="invalid-feedback">Name is required</div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Image :</label>
                        <input type="file" id="image" name="image" class="form-control" accept="image/*">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email :</label>
                        <input type="email" name="email" class="form-control" placeholder="abc@gmail.com" required>
                        <div class="invalid-feedback">email is required</div>
                    </div>
                    <div class="mb-3">
                        <label for="post" class="form-label">Post :</label>
                        <textarea name="post" class="form-control" rows="5" placeholder="Create a post..." required></textarea>
                        <div class="invalid-feedback">Create a post</div>
                        <div class="valid-feedback">Post looks Great</div>
                    </div>
                    <div class="mb-3">
                        <label for="comment" class="form-label">Comment :</label>
                        <textarea name="comment" class="form-control" rows="3" placeholder="Add a comment..." required></textarea>
                        <div class="invalid-feedback">Please add a comment about your post</div>
                    </div>
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="likes" class="form-label">Likes :</label>
                                <input type="number" name="likes" class="form-control" style="width: 100px;">
                            </div>
                            <div class="col-md-6">
                                <label for="followers" class="form-label">Followers :</label>
                                <input type="number" name="followers" class="form-control" style="width: 100px;">
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password :</label>
                        <input type="password" name="password" class="form-control" placeholder="Set a password" required>
                        <div class="invalid-feedback">Set a password for privacy</div>
                    </div>
                    <button type="submit" class="btn btn-primary">Add</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>