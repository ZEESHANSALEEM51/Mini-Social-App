<!-- Audio -->
<audio id="bgMusic" src="/uploads/Download.mp3"></audio>

<script>
const music = document.getElementById('bgMusic');
const playBtnDesktop = document.getElementById('playMusicDesktop');
const playBtnMobile = document.getElementById('playMusicMobile');

function playMusic(btn) {
  music.volume = 0.4;
  music.play();
  btn.style.display = 'none';
  
  // Create pause button
  const pauseBtn = document.createElement('button');
  pauseBtn.className = btn.className.replace('btn-success', 'btn-warning');
  pauseBtn.innerHTML = '<i class="fas fa-pause me-1"></i> Pause';
  pauseBtn.onclick = function() {
    music.pause();
    pauseBtn.remove();
    btn.style.display = 'inline-block';
  };
  btn.parentNode.appendChild(pauseBtn);
}

if (playBtnDesktop) playBtnDesktop.addEventListener('click', () => playMusic(playBtnDesktop));
if (playBtnMobile) playBtnMobile.addEventListener('click', () => playMusic(playBtnMobile));
</script>